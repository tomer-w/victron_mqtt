{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "dump_victron_mqtt",
            "type": "debugpy",
            "request": "launch",
            "module": "victron_mqtt.utils.dump_victron_mqtt",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  // Include src in PYTHONPATH so Python can find the module
            },
            "args": ["victron_mqtt.json"]
        },
        {
            "name": "dump_mqtt",
            "type": "debugpy",
            "request": "launch",
            "module": "victron_mqtt.utils.dump_mqtt",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  // Include src in PYTHONPATH so Python can find the module
            },
            "args": ["--host", "192.168.0.159", "--port", "1884", "--verbose"]
        },
        {
            "name": "view_metrics",
            "type": "debugpy",
            "request": "launch",
            "module": "victron_mqtt.utils.view_metrics",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  // Include src in PYTHONPATH so Python can find the module
            },
            "args": ["--verbose", "--log-file", "view_metrics.log"]
        },
        {
            "name": "view_metrics specific topic",
            "type": "debugpy",
            "request": "launch",
            "module": "victron_mqtt.utils.view_metrics",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  // Include src in PYTHONPATH so Python can find the module
            },
            "args": ["--verbose", "--log-file", "view_metrics.log", "--log-topic", "/BatteryLife/Schedule/Charge"]
        },
        {
            "name": "dumb_mqtt_listener",
            "type": "debugpy",
            "request": "launch",
            "module": "victron_mqtt.utils.dumb_mqtt_listener",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  // Include src in PYTHONPATH so Python can find the module
            },
            "args": ["--host", "192.168.0.159", "--port", "1883", "--only_supported_victron"]
        }
    ]
}

